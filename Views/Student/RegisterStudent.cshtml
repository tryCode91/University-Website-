@using Teaching.ViewModels
@model RegisterStudentViewModel

<div class="container mt-5">
    <div class="row d-flex flex-row align-items-center">

        <div class="col-6 d-none d-xl-block student-img">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                 alt="Sample photo" class="img-fluid"
                 style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
        </div>

        <div class="col-6">
            <h3 class="text-center mr-5">Student Registration Form</h3>

            <form asp-action="RegisterStudent" class="mx-1 mx-md-4">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <input type="text" asp-for="Name" class="form-control" />
                        <label class="form-label" asp-for="Name">Your Name</label>
                    </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <input type="number" asp-for="Age" class="form-control" />
                        <label class="form-label" asp-for="Age">Age</label>
                    </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <input type="text" asp-for="PhoneNumber" class="form-control" />
                        <label class="form-label" asp-for="PhoneNumber">Phone number<i>(With countrycode)</i></label>
                    </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <input type="text" asp-for="Address.Country" class="form-control" />
                        <label class="form-label" asp-for="Address.Country">Country</label>
                    </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <input type="text" asp-for="Address.City" class="form-control" />
                        <label class="form-label" asp-for="Address.City">City</label>
                    </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <input type="text" asp-for="Address.Street" class="form-control" />
                        <label class="form-label" asp-for="Address.Street">Street</label>
                    </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <input type="number" asp-for="Address.PostalCode" class="form-control" />
                        <label class="form-label" asp-for="Address.PostalCode">Postal code</label>
                    </div>
                </div>

                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <input class="btn btn-primary btn-lg" type="submit" value="Register" />
                </div>

            </form>

            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    
        </div>

    </div>

</div>